<style type="text/css">
	.list-group-item {
	    background: #f5f5f5;
	    position: relative;
	    display: inline;
	    padding: 10px 15px;
	    border: 1px solid #e7e7e7;
	    cursor:pointer;
	    border-radius: 5px;
	    margin-right: 10px;
	    line-height: 20px;
	    text-align: center
	}

	.submit-btn {
        margin: 10px 0;
      background: black;
      width: 120px;
      color: white;
      cursor: pointer;
      text-align: center;
      text-decoration: none;
      border-radius: 3px;
      border: 1px solid black;
      outline: none;
      padding: 8px;
      transition: 0.3s;
    }

	.list-group-item.active a {
	    color: white;
	}
</style>

<%= render 'layouts/wildlife_head' %>

<section id="results" class="py-4 my-4">
    <div class="container">
        <div class="row">
            <h3 class="col-12 px-0 demi text-dark">Tracking</h3>
            <p class="col-12 px-0 light lead">These are the objects found in your video. Click on objects you want to track?</p>
            <ul class="col-12 px-0">
                <% @classes.first(10).each do |c|%>
                  <li class="list-group-item"><a><%= c %></a></li>
                <% end %>
			</ul>
			<div class="row">
				
			</div>
			<%= link_to "Proceed", data_datum_index_path, class: "submit-btn text-white", style: "text-decoration: none" %>
        </div>
        
        
    </div>
</section>




